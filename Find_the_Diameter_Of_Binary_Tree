// Diameter is the number of nodes in the longest path between the two leaves.

public class Find_Diameter_BinaryTree {

    static class Node {
        int data;
        Node left;
        Node right;

        Node (int data){
            this.data = data;
            this.left = null;
            this.right = null;
        }
    }

    public static int height(Node root){
        if(root == null){
            return 0;
        }
        int lh = height(root.left);
        int rh = height(root.right);
        return Math.max(lh, rh)+1;
    }

    static int selfPassing;
    public static int diameter(Node root){
        if(root == null){
            return 0;
        }
        int leftDiam = diameter(root.left);
        int leftHeight = height(root.left);
        int rightDiam = diameter(root.right);
        int rightHeight = height(root.right);
        selfPassing = (leftHeight+rightHeight+1);
        return Math.max(selfPassing, Math.max(leftDiam, rightDiam));
    }

    public static void main (String args[]){
        Node newNode = new Node(1);
        newNode.left = new Node(2);
        newNode.right = new Node(3);
        newNode.left.left = new Node(4);
        newNode.left.right = new Node(5);
        newNode.right.right = new Node(6);
        System.out.println("Diameter is : "+ diameter(newNode));
    }
}
