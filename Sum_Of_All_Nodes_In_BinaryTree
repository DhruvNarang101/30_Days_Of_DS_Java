public class SumOfNodeInTree {

    static class Node {
        int data;
        Node left;
        Node right;

        Node (int data){
            this.data = data;
            this.left = null;
            this.right = null;
        }
    }

    static int holeSum;
    public static int sumNodes(Node root){
        if (root == null) {
            return 0;
        }
        int ls = sumNodes(root.left);
        int rs = sumNodes(root.right);
        holeSum = ls+rs+root.data;
        return holeSum;
    }

    public static void main (String args[]){
/*                          1
                          /   \
                         2     3
                       /   \
                     4      5
                             \
                               6
                                \
                                  7  */

        Node newNode = new Node(1);
        newNode.left = new Node(2);
        newNode.right = new Node(3);
        newNode.left.left = new Node(4);
        newNode.left.right = new Node(5);
        newNode.left.right.right = new Node(6);
        newNode.left.right.right.right = new Node(7);
        System.out.println("Sum of Nodes in a tree is  = "+ sumNodes(newNode));

    }
}
