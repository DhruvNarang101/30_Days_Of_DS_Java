
public class CountNumberOfNode {

    static class Node {
        int data;
        Node left;
        Node right;

        Node(int data){
            this.data = data;
            this.left = null;
            this.right = null;
        }
    }
    static int count;
    public static int countNode(Node root){
        if(root == null){
            return 0;
        }
        int lh = countNode(root.left);
        int rh = countNode(root.right);
        count = (lh + rh + 1);
        return count;
    }

    public static void main (String args[]){
/*                          1
                          /   \
                         2     3
                       /   \
                     4      5
                             \
                               6
                                \
                                  7  */
                             
        Node newNode = new Node(1);
        newNode.left = new Node(2);
        newNode.right = new Node(3);
        newNode.left.left = new Node(4);
        newNode.left.right = new Node(5);
        newNode.left.right.right = new Node(6);
        newNode.left.right.right.right = new Node(7);
        System.out.println("Number of Nodes in a tree is  = "+ countNode(newNode));
    }
}
