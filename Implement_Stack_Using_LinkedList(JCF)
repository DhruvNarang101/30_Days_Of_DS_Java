// Day 8 Implement Stack Using the LinkedList with Java Collection Framework.

import java.util.LinkedList;

public class UsingJCFImplementStackUsingLinkedList {

    static class Stack {

        static LinkedList<Integer> ll = new LinkedList<>();

        public static boolean isEmpty(){
            return ll.size() == 0;
        }

        // Push
        public static void push(int data){
            ll.add(data);
        }

        // Pop
        public static int pop(){
            if(isEmpty()){
                return -1;
            }
            int top = ll.getLast();
            ll.removeLast();
            return top;
        }

        // peek
        public static int peek(){
            if(isEmpty()){
                return -1;
            }
            return ll.peekLast();
        }
    }

    public static void main (String args[]){
        Stack s = new Stack();
        s.push(1);
        s.push(2);
        s.push(3);
        s.push(4);

        while (!s.isEmpty()) {
            System.out.println(s.peek());
            s.pop();
        }
    }
}
